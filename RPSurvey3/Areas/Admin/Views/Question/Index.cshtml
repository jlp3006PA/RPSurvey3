@model IEnumerable<Question>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container border backgroundWhite">

  <div class="row">
    <div class="col-6">
      <h2 class="text-info">List of Questions</h2>
    </div>
    <div class="col-6 text-right">
      <partial name="_CreateButtonPartial" />
    </div>
  </div>
  <br />
  <div>
    @if (Model.Count() > 0)
    {
      <table class="table table-striped border">
        <tr class="table-secondary">
          <th style="width:60%">
            @Html.DisplayNameFor(m => m.SurveyQuestion)
          </th>
          <th>
            @Html.DisplayNameFor(m => m.Section)
          </th>
          <th>
            @Html.DisplayNameFor(m => m.SubSection)
          </th>
          <th>
            @Html.DisplayNameFor(m => m.DisplayOrder)

          </th>
          <th></th>
        </tr>

        @foreach (var item in Model)
        {
          <tr>
            <td>
              @Html.DisplayFor(m => item.SurveyQuestion)
            </td>
            <td>
              @Html.DisplayFor(m => item.Section.Name)
            </td>
            <td>
              @Html.DisplayFor(m => item.SubSection.Name)
            </td>
            <th>
              @Html.DisplayFor(m => item.DisplayOrder)

            </th>
            <td>
              <partial name="_TableButtonPartial" model="item.Id" />
            </td>
          </tr>
        }
      </table>
    }
    else
    {
      <p>No Questions items in database...</p>
    }
  </div>
</div>